@* @page "/courseregister"

<EditForm Model="@courseRegister" class="w-50 mx-auto" OnInvalidSubmit="@SubmitButton" OnValidSubmit="@SuccessSubmit" >
    <DataAnnotationsValidator />
    <ValidationSummary class="alert-danger" />
    <h3 class="text-center">Course Register Form</h3>
    <div class="form-group">
        <label>Full Name *</label>
        <input type="text" class="form-control" @bind="@courseRegister.FullName">
        <ValidationMessage For="@(() => courseRegister.FullName)" />

    </div>

    <div class="form-group">
        <label>Email *</label>
        <input type="email" class="form-control" @bind="@courseRegister.Email">
        <ValidationMessage For="@(() => courseRegister.Email)" />
    </div>

    <div class="form-group">
        <label>Phone Number *</label>
        <input type="tel" class="form-control" @bind="@courseRegister.PhoneNumber">
        <ValidationMessage For="@(() => courseRegister.PhoneNumber)" />
    </div>

    <div class="form-group">
        <label>Select Course *</label>
        <select class="form-control" @bind="courseRegister.SelectCourse">
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
        </select>
        <ValidationMessage For="@(() => courseRegister.SelectCourse)" />
    </div>

    <div class="form-group">
        <label>Study Mode *</label>
        <div class="form-check">
            <input id="Offline" name="studyMode" class="form-check-input" type="radio" value="Offline"
                @bind="courseRegister.StudyMode">
            <label for="Offline" class="form-check-label">Offline</label>
        </div>
        <div class="form-check">
            <input id="Online" name="studyMode" class="form-check-input" type="radio" value="Online"
                @bind="courseRegister.StudyMode">
            <label for="Online" class="form-check-label">Online</label>
        </div>
        <ValidationMessage For="@(() => courseRegister.StudyMode)" />
    </div>

    <div class="form-group">
        <label>Preferred Start Date *</label>
        <input type="date" class="form-control" @bind="courseRegister.StartDay">
        <ValidationMessage For="@(() => courseRegister.StartDay)" />
    </div>
    <div class="form-group">
        <label for="">Comments or Notes</label>
        <textarea type="text" class="form-control" @bind="courseRegister.Comment"></textarea>
        <ValidationMessage For="@(() => courseRegister.Comment)" />
    </div>
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" @bind="@courseRegister.TermsAndConditions" />
        <label class="form-check-label">I agree to the terms and conditions *</label>
        <ValidationMessage For="@(() => courseRegister.TermsAndConditions)" class="text text-danger" />
    </div>
    @if (!string.IsNullOrEmpty(Message))
    {
        <div class="alert alert-success mt-3">@Message</div>
    }
</EditForm>

@code
{
    public CourseRegister courseRegister = new CourseRegister();
    public string Message;

    // thông báo thiếu dữ liệu nhập
    public void SubmitButton()
    {
        Console.WriteLine("Form is invalid");
        string Notifi = JsonSerializer.Serialize(courseRegister);
        Console.WriteLine(Notifi);
    }

    // thông báo submit thành công
    public void SuccessSubmit()
    {
        Message = "Form submitted successfully!";
        Console.WriteLine(JsonSerializer.Serialize(courseRegister));

    }
} *@